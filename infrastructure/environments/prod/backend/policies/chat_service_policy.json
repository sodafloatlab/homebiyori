{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:Query"
      ],
      "Resource": [
        "${core_table_arn}",
        "${core_table_arn}/index/*",
        "${chats_table_arn}",
        "${fruits_table_arn}"
      ],
      "Condition": {
        "ForAllValues:StringLike": {
          "dynamodb:LeadingKeys": ["USER#*"]
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": ["bedrock:InvokeModel"],
      "Resource": [
        "arn:aws:bedrock:${region}::foundation-model/${ai_unified_model_id}"
      ]
    },
    {
      "Effect": "Allow", 
      "Action": ["ssm:GetParameter"],
      "Resource": [
        "arn:aws:ssm:${region}:${account_id}:parameter/${environment}/${project_name}/*"
      ]
    }
  ]
}