# =====================================
# Homebiyori Backend Configuration Example
# =====================================

# Project configuration
project_name = "homebiyori"
environment  = "prod"

# AWS configuration
aws_region = "ap-northeast-1"

# Logging configuration
log_retention_days = 7

# =====================================
# Stripe EventBridge Integration
# =====================================

# Stripe Partner Event Source ID (auto-generated by Stripe)
# Format: only the part after "aws.partner/stripe.com/"
# 
# REQUIRED: Set this value before running terraform apply
# 1. Go to Stripe Dashboard â†’ Developers â†’ Webhooks
# 2. Enable EventBridge integration
# 3. Copy the Partner Event Source ID (the part after "aws.partner/stripe.com/")
# 4. Paste your ID between the quotes below
#
# ========================================
# ðŸ”½ INPUT REQUIRED: Enter your Stripe Partner Event Source ID here
# ========================================
stripe_partner_event_source_id = ""
# Example: stripe_partner_event_source_id = "ed_test_61TAjulNQf5rP5RB416T2ty2UTHNDQCMy7NuwCSO8O7U"

# =====================================
# Lambda Configuration
# =====================================

# Lambda deployment packages (auto-generated paths)
